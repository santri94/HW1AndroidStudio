<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/GPACalculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="GPA Calculator"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorLink="#00BD5656"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="Enter First Grade"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/FirstCourse"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="start"
                android:ems="10"
                android:hint="1-100"
                android:inputType="number"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="Enter Second Grade"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/SecondCourse"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="start"
                android:ems="10"
                android:hint="1-100"
                android:inputType="number"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="Enter Third Grade"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/ThirdCourse"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="start"
                android:ems="10"
                android:hint="1-100"
                android:inputType="number"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="Enter Fourth Grade"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/FourthCourse"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="start"
                android:ems="10"
                android:hint="1-100"
                android:inputType="number"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="Enter Fifth Grade"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/FifthCourse"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="start"
                android:ems="10"
                android:hint="1-100"
                android:inputType="number"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/submit"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#2b75ed"
                android:gravity="center"
                android:onClick="CalculateGPA"
                android:text="Compute GPA"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/results"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:gravity="center"
                android:text="Results"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>